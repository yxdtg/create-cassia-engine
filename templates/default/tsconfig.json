{
    "include": ["./src/**/*"],
    "exclude": [],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",

        "moduleResolution": "node10",
        "allowJs": true,

        "verbatimModuleSyntax": true,
        "stripInternal": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true,

        "outDir": "./dist",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
